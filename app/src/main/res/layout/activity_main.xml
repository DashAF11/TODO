<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Choose your List Group"
                android:textColor="@color/topbar"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Selection for you"
                android:textColor="@color/mainbar"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:text="to get started"
                android:textColor="@color/mainbar"
                android:textSize="25dp"
                android:textStyle="italic" />

            <RelativeLayout
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:id="@+id/relativelayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="30dp"
                android:background="@drawable/recycle_background_layout">

                    <CheckBox
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:buttonTint="@color/mainbar"
                        android:backgroundTint="@color/tabs"
                        android:id="@+id/chkbgro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:textSize="28dp" />

                    <ImageView
                        android:id="@+id/m1"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/menuicon" />

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/m1"
                        android:id="@+id/tvgro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groceries"
                        android:textColor="@color/button"
                        android:textSize="25dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:id="@+id/relativelayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout3"
                android:layout_marginTop="1dp"
                android:background="@drawable/recycle_background_layout">

                <CheckBox
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/mainbar"
                    android:backgroundTint="@color/tabs"
                    android:id="@+id/chkbmovies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:textSize="28dp" />


                <ImageView
                    android:id="@+id/m2"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/menuicon" />

                    <TextView
                        android:layout_toRightOf="@+id/m2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/tvmov"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movies to watch"
                        android:textColor="@color/button"
                        android:textSize="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="2dp"
                android:id="@+id/relativelayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout4"
                android:layout_marginTop="1dp"
                android:background="@drawable/recycle_background_layout">

                    <CheckBox
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:buttonTint="@color/mainbar"
                        android:backgroundTint="@color/tabs"
                        android:id="@+id/chkbtravel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:textSize="28dp" />

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/m3"
                        android:layout_marginLeft="10dp"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/menuicon" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/m3"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/tvtravel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel"
                        android:textColor="@color/button"
                        android:textSize="25dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:id="@+id/relativelayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout5"
                android:layout_marginTop="1dp"
                android:background="@drawable/recycle_background_layout">

                    <CheckBox
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:buttonTint="@color/mainbar"
                        android:backgroundTint="@color/tabs"
                        android:id="@+id/chkbsports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.5"
                        android:layout_centerVertical="true"
                        android:scaleY="1.5"
                        android:textSize="28dp" />

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/m4"
                        android:layout_centerVertical="true"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/menuicon" />

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/m4"
                        android:layout_centerVertical="true"
                        android:id="@+id/tvsport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sports"
                        android:textColor="@color/button"
                        android:textSize="25dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:id="@+id/relativelayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout6"
                android:layout_marginTop="1dp"
                android:background="@drawable/recycle_background_layout">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/m5"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left"
                        android:background="@drawable/menuicon" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/m5"
                        android:id="@+id/tvwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work"
                        android:gravity="center"
                        android:textColor="@color/button"
                        android:textSize="25dp"/>

                <CheckBox
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:buttonTint="@color/mainbar"
                    android:backgroundTint="@color/tabs"
                    android:id="@+id/chkbwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:textSize="28dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnstart"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayout7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_button"
                android:padding="5dp"
                android:text="Get Started"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </RelativeLayout>

</RelativeLayout>