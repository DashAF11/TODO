<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <RelativeLayout
        android:padding="6dp"
        android:layout_margin="4dp"
        android:background="@drawable/recycle_background_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/iconsss"
        android:src="@drawable/icon"
        android:layout_width="34dp"
        android:layout_height="34dp"/>

        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/iconsss"
            android:id="@+id/taskgroup"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Group"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/entertg"
            android:layout_below="@+id/iconsss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Group Name"
            android:textColor="@color/black"/>

        <EditText
            android:textColorHint="@color/mainbar"
            android:backgroundTint="@color/mainbar"
            android:id="@+id/txtgroup_name"
            android:layout_below="@+id/entertg"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    <TextView
        android:textStyle="bold"
        android:padding="3dp"
        android:textColor="@color/topbar"
        android:id="@+id/btncancelpop_up"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/btnaddpop_up"
        android:layout_below="@+id/txtgroup_name"
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:padding="3dp"
        android:textColor="@color/topbar"
        android:layout_alignParentRight="true"
        android:id="@+id/btnaddpop_up"
        android:layout_below="@+id/txtgroup_name"
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>