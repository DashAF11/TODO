<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cliclsearch"
    android:layout_height="75dp"
    android:background="@drawable/recycle_background_layout"
    android:layout_marginBottom="1dp">

    <ImageView
        android:focusable="true"
        android:clickable="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/mainbar"
        android:layout_centerVertical="true"
        android:id="@+id/btn_refresh"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/refresh"
        tools:targetApi="lollipop" />

    <RelativeLayout
        android:id="@+id/prefrence_color"
        android:background="@drawable/new_c"
        android:layout_width="5dp"
        android:layout_height="match_parent">
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/prefrence_color"
        android:layout_toLeftOf="@+id/btn_refresh"
        android:textColor="@color/button"
        android:id="@+id/tv_taskname"
        android:textStyle="bold"
        android:layout_above="@id/textview1234"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lines= "2"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/catid"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/prefrence_color"
        android:layout_alignParentBottom="true"
        android:text="Group : "
        android:id="@+id/textview1234"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textview1234"
        android:id="@+id/catname"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/tv_taskid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_taskstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="italic"
        android:visibility="invisible" />

            <TextView
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/button"
                android:id="@+id/tv_taskdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:layout_below="@+id/tv_taskdate"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tv_tasktime"
                android:textColor="@color/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvtask_pref"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

</RelativeLayout>
