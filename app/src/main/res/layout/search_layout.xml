<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:padding="6dp"
    android:id="@+id/click_relative_search"
    android:background="@drawable/recycle_background_layout"
    android:layout_marginBottom="1dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/type"
            android:id="@+id/name"
            android:lines="2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/button"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/s"
            android:text="Status : "
            android:layout_marginLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:layout_toRightOf="@+id/s"
            android:layout_alignParentBottom="true"
            android:id="@+id/status_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/count_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/task"
            android:layout_alignParentBottom="true"
            android:text="  Task, "
            android:layout_toRightOf="@+id/count_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:layout_toRightOf="@+id/task"
            android:layout_alignParentBottom="true"
            android:id="@+id/pcount_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pt"
            android:layout_alignParentBottom="true"
            android:text="  Pending Task"
            android:layout_toRightOf="@+id/pcount_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/type"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="invisible"
            android:id="@+id/td"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>
